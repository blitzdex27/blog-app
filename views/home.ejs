    <!-- SECTION: TESTIMONIALS START -->
    <section id="testimonials">
      <div class="carousel-container fst-italic">
        <div
          id="tesimonialCarousel"
          class="carousel slide text-center"
          data-bs-ride="carousel"
        >
          <div class="carousel-inner">
            <div class="carousel-item active">
              <h2>
                "Did you have fun? Try composing a blog by signing in. I
                recommend signing in using your Google account but you can
                sign up using any password you would like."
              </h2>
              <p>- Dexter</p>
            </div>
            <div class="carousel-item">
              <h2>
                "Cool! Are you finished? Please give me a feedback through the
                form below so I can add some testimonials in this section if
                you will allow."
              </h2>
              <p>- Dexter</p>
            </div>
            <div class="carousel-item">
              <h2>"I will upgrade this using React next month!"</h2>
              <p>- Dexter</p>
            </div>
          </div>
          <!-- Buttons for carousel  -->
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#tesimonialCarousel"
            data-bs-slide="prev"
          >
            <span
              class="carousel-control-prev-icon"
              aria-hidden="true"
            ></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#tesimonialCarousel"
            data-bs-slide="next"
          >
            <span
              class="carousel-control-next-icon"
              aria-hidden="true"
            ></span>
            <span class="visually-hidden">Next</span>
          </button>

          <!-- Carousel indicators  -->
          <div class="d-block">
            <div class="carousel-indicators">
              <button
                type="button"
                data-bs-target="#tesimonialCarousel"
                data-bs-slide-to="0"
                class="active"
                aria-current="true"
                aria-label="Slide 1"
              ></button>
              <button
                type="button"
                data-bs-target="#tesimonialCarousel"
                data-bs-slide-to="1"
                aria-label="Slide 2"
              ></button>
              <button
                type="button"
                data-bs-target="#tesimonialCarousel"
                data-bs-slide-to="2"
                aria-label="Slide 3"
              ></button>
            </div>
          </div>
        </div>
      </div>

      <!-- SECTION: TESTIMONIALS END -->
    </section>

    <!-- SECTION: FEEDBACK START -->
    <section id="feedback">
      <h1 class="text-center">Give this site a feedback!</h1>
      <div class="feedback-container">
        <form action="POST">
          <div class="mb-3">
            <label for="feedbackEmail" class="form-label"
              >Email address</label
            >
            <input
              id="feedbackEmail"
              type="email"
              class="form-control"
              aria-describedby="emailHelp"
              placeholder="john@doe.com"
            />
            <div id="emailHelp" class="form-text">
              I will not share your email!
            </div>
          </div>

          <div class="mb-3">
            <label for="feedbackName" class="form-label">Name</label>
            <input
              id="feedbackName"
              type="text"
              class="form-control"
              aria-describedby="nameHelp"
              placeholder="John Doe"
            />
            <div id="nameHelp" class="form-text">
              It's better if you provide your name too!
            </div>
          </div>

          <div class="mb-3">
            <label for="feedbackContent" class="form-label">Content</label>
            <textarea
              name="feedbackContent"
              id="feedbackContent"
              rows="5"
              class="form-control"
              aria-describedby="contentHelp"
              placeholder="Your feedback will help me!"
            ></textarea>
            <div id="contentHelp" class="form-text">
              Please be specific with your feedback content!
            </div>
          </div>

          <div class="mb-3 form-check">
            <input
              type="checkbox"
              class="form-check-input"
              id="feedbackCheck"
              aria-describedby="checkHelp"
            />
            <label class="form-check-label" for="exampleCheck1">Agree</label>
          </div>
          <div id="checkHelp" class="form-text">
            By marking this checkbox, you agree to publicly post your feedback
            as testimonial in within this site. Your feedback may or may not
            be posted in this site.
          </div>
          <br />
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <!-- SECTION: FEEDBACK END -->
    </section>


